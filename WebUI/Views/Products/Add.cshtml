@model Business.Dtos.ProductsDto

<form method="post">
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary"> Add Product</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="NumberOfProduct" class="p-0"></label>
            <input asp-for="NumberOfProduct" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" class="form-control">
        </div>
        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">
            Add
        </button>
        <a asp-controller="Products" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
            Back To Products
        </a>
    </div>
</form>